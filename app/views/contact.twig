{% extends "base.html.twig" %}

{% block title %}{{ titre_doc }}{% endblock %}

{% block head_extra %}
  <script src="js/formulaire.js" defer></script>
{% endblock %}

{% block content %}
  <h1>{{ titre_page }}</h1>

  <div class="container-contact">
    <form id="contactForm">
      <label for="name">Nom :</label><br>
      <input type="text" id="name" name="name" required><br><br>

      <label for="email">Email :</label><br>
      <input type="email" id="email" name="email" required><br><br>

      <label for="message">Message :</label><br>
      <textarea id="message" name="message" required></textarea><br><br>

      <input class="submit-btn" type="submit" value="Envoyer">
    </form>
  </div>

  <dialog id="successDialog">
    <p class="dialog-success">Message envoyé avec succès !</p>
    <p id="dialogText"></p>
    <button id="closeDialog">Fermer</button>
  </dialog>
{% endblock %}
