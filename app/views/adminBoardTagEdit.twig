{% extends "base.html.twig" %}

{% block title %}
	Modifier un tag
{% endblock %}

{% block content %}
	<h1 class="text-center my-4">Modifier le tag</h1>

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">

				<div class="card shadow-sm">
					<div class="card-body">

						<form action="{{ base_url }}AdminBoard/Update" method="POST">
							<input type="hidden" name="tag_id" value="{{ tag_id }}">

							<div class="mb-3">
								<label class="form-label">Nom du tag</label>
								<input type="text" name="tag_name" class="form-control" value="{{ tag_name }}" required>
							</div>

							<button type="submit" class="btn btn-primary">Enregistrer</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
