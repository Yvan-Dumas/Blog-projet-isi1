{% extends "base.html.twig" %}

{% block title %}
	{{ titre_doc }}
{% endblock %}

{% block content %}
	<h1 class="text-center my-4">{{ titre_page }}</h1>

	<!-- Bouton créer un nouvel article -->
	<div class="text-end mb-4 me-4">
		<a href="{{ base_url }}myArticles/create" class="btn btn-success">
			+ Créer un nouvel article
		</a>
	</div>

	<div class="p-5">
		<div class="row g-4">
			{% for article in articles %}
				<div class="col-md-3">
					<div class="card h-100 shadow-sm">
						<div
							class="card-body d-flex flex-column">
							<!-- Titre de l'article -->
							<h5 class="card-title">{{ article.titre }}</h5>

							<!-- Date de mise à jour -->
							<p class="card-text text-muted">Date de dernière mise à jour :
								{{ article.date_mise_a_jour }}</p>

							<!-- Statut -->
							<p class="card-text">
								<strong>Statut :
								</strong>
								{{article.statut}}</p>

							<!-- Boutons -->
							<div class="mt-auto d-flex justify-content-end">
								<a href="{{ base_url }}article/{{ article.slug }}" class="btn btn-primary btn-sm me-2">Lire</a>
								<a href="{{ base_url }}article/edit/{{ article.id }}" class="btn btn-warning btn-sm me-2">Modifier</a>
								<a href="{{ base_url }}article/delete/{{ article.id }}" class="btn btn-danger btn-sm">Supprimer</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<p>Aucun article trouvé.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
